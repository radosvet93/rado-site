---
import { AppConfig } from '@/utils/AppConfig';
import Base from '@/layouts/Base.astro';
import Hero from '@/components/Hero.astro';
import LatestPosts from '@/components/LatestPosts.astro';
import { sortPostsByDate } from '@/utils/data.util';
import { MarkdownInstance } from 'astro';
interface Frontmatter {
	title: string;
	description?: string;
	isPublished?: boolean;
}
const { title } = AppConfig;
const { description } = AppConfig;

const allPosts = Object.values(
	import.meta.glob<MarkdownInstance<Frontmatter>>('./posts/**/*.md', { eager: true })
);
allPosts.sort(sortPostsByDate);
const publishedPosts = allPosts.filter((post) => post.frontmatter.isPublished != false);
const latestPosts = publishedPosts.slice(0, 3);
---

<Base head={{ title, description }}>
	<Hero />
	<LatestPosts posts={latestPosts} />
</Base>
