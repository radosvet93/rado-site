---
import Tag from './Tag.astro';

type Props = {
	tags: string[];
	withHref?: boolean;
};

const { tags, withHref = false } = Astro.props;
---

<div class="flex flex-wrap justify-center gap-y-2">
	{
		tags.map((tag: string) => {
			const element = <Tag tag={tag} />;
			return withHref ? <a href={`/tags/${tag}`}>{element}</a> : element;
		})
	}
</div>
